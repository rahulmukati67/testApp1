<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Salary">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtLabour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="Labour Hari"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtLabour" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="30dp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtJan12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Jan 12"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/txtLabour" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipJan12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtJan12"
        app:layout_constraintStart_toEndOf="@+id/txtJan12"
        app:layout_constraintTop_toTopOf="@+id/txtJan12"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip12JanP"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip12JanA"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtJan13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Jan 13"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/txtJan12" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipJan13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:singleSelection="true"
        app:layout_constraintBottom_toBottomOf="@+id/txtJan13"
        app:layout_constraintStart_toEndOf="@+id/txtJan13"
        app:layout_constraintTop_toTopOf="@+id/txtJan13">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13JanP"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13JanA"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp"  />

    </com.google.android.material.chip.ChipGroup>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtJan14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Jan 14"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/txtJan13" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipJan14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:singleSelection="true"
        app:layout_constraintBottom_toBottomOf="@+id/txtJan14"
        app:layout_constraintStart_toEndOf="@+id/txtJan14"
        app:layout_constraintTop_toTopOf="@+id/txtJan14">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip14JanP"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip14JanA"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp"  />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtJan15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Jan 15"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/txtJan14" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipJan15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:singleSelection="true"
        app:layout_constraintBottom_toBottomOf="@+id/txtJan15"
        app:layout_constraintStart_toEndOf="@+id/txtJan15"
        app:layout_constraintTop_toTopOf="@+id/txtJan15">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip15JanP"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip15JanA"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent"
            android:textSize="20sp"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="8dp"
            app:chipStrokeColor="#838181"
            app:chipStrokeWidth="2dp"  />

    </com.google.android.material.chip.ChipGroup>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="#602A3A"
        app:cardCornerRadius="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipJan15" />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="#FEF6FE"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textSize="26sp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardView1"
                app:layout_constraintStart_toStartOf="parent"
                android:text="0" />

            <TextView
                android:id="@+id/constant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:textSize="26sp"
                app:layout_constraintTop_toBottomOf="@id/cardView1"
                app:layout_constraintStart_toEndOf="@+id/count"
                android:text=" X Rs.600 " />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/rupees"
                app:layout_constraintBottom_toBottomOf="@+id/constant"
                app:layout_constraintStart_toEndOf="@+id/constant"
                app:layout_constraintTop_toBottomOf="@+id/cardView1" />

            <TextView
                android:id="@+id/txtSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />

            <Button
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate Salary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#6E3644"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constant" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>